<div class="col-lg-12">
<%= form_for(@classroom) do |f| %>
  <a href="<%= classrooms_path %>">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
    <% if @classroom.errors.any? %>
      <div class="alert alert-danger">
        <% @classroom.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :entry_at %><br>
        <%= f.date_field  :entry_at, :class => 'form-control' %>
      </div>
       <div class="form-group">
        <%= f.label :student_id %><br>
        <%= f.select :student_id, @students.collect {|s| [ s.name, s.id]}, {prompt: "Selecione o Estudante:"}, {:class => 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :course_id %><br>
        <%= f.select :course_id, @courses.collect {|c| [ c.name, c.id]}, {prompt: "Selecione o Curso:"}, {:class => 'form-control'} %>
      </div>
    </div>
  </section>
<div class="form-group">
  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
</div>
<% end -%>
</div>


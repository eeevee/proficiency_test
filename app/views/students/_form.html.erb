<div class="col-lg-12">
<%= form_for(@student) do |f| %>
  <a href="<%= students_path %>">
      <button type="button" class="btn btn-default">Voltar</button>
  </a>
  <div class="panel"></div>
  <section class="panel">
    <%= render partial: 'layouts/errors_messages', locals: {object: @student} %>
    <div class="panel-body">
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
           <div class="form-group">
            <%= f.label :register_number %><br>
            <%= f.text_field :register_number, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :status %><br>
            <%= f.select :status, options_for_select(@statuses.collect { |s| [I18n.t("student_status.#{s[0]}"), s[0]] }, selected: @student.status), {}, class: 'form-control' %>
          </div>
    </div>
  </section>
<div class="form-group">
  <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
</div>
<% end -%>
</div>
